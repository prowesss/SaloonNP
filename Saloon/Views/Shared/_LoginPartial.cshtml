@using Microsoft.AspNetCore.Identity
@using Saloon.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (User.IsInRole("Admin"))
    {
        @Html.Partial("_AdminSidebar")
    }
    <li class="nav-item">
        @* <button class="btn btn-outline-primary view-cart">View Cart</button>*@
        <button type="button" id="viewCart" class="btn btn-primary" style="display: none" onclick="gotoCart()">
            View Cart
        </button>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // get the button element by ID
            var myButton = $("#viewCart");
            var appointment = sessionStorage.getItem('AppointmentBooking');

            if (appointment) {
                myButton.css("display", "block");
            } else {
                myButton.css("display", "none");
            }
            // enable the button
            //myButton.css("display", "none");

            // show the button

        });
    </script>

<script>
    function gotoCart() {
        var appointment = sessionStorage.getItem('AppointmentBooking');
        window.location.href = '@Url.Action("Cart", "Appointment")' + '?appointment=' + encodeURIComponent(appointment);
    }
</script>

