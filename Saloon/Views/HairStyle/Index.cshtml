@model IEnumerable<Saloon.Models.ServiceManagementModels.HairStyle>

@{
    ViewData["Title"] = "List of HairStyles";
}

<div class="row">
    <div class="pb-4">
        <a class="btn btn-primary" asp-action="create">Create </a>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name

                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>HairStyle: </b>@item.Name</p>
                            <p class="card-text"><b>Gender: </b>@item.Gender</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger text-white">ON HOLD</span>
                                }

                            </p>

                        </div>
                    </div>
                    <div>
                        <p class="card-text">
                            <b>Staffs: </b>
                            <hr />
                            <div class="row">
                                @if (item.Staffs_HairStyles != null)
                                {
                                    @foreach (var staff in item.Staffs_HairStyles)
                                    {
                                        <div class="col text-center">
                                            <a href="@Url.Action("Details", "Staff", new { id = staff.Staff.Id })">
                                                <img class="border-info rounded-circle" src="@staff.Staff.ProfilePictureURL" style="max-width: 50px" />
                                                <br />
                                                @staff.Staff.FullName
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                        </p>

                    </div>



                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-primary" asp-action="edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>edit </a>
                                    <a class="btn btn-danger text-white" asp-action="delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>delete </a>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


